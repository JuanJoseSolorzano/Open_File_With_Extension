{
  "name": "open-file-with-extension",
  "displayName": "Open Wiht System Editor",
  "description": "",
  "version": "1.0.1",
  "icon": "icon.png",
  "publisher": "Solorzano-JuanJose",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.openWithCustom"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JuanJoseSolorzano/Open_File_With_Extension"
  },
  "contributes": {
    "commands": [
      {
        "command": "open-file-with-extension.openWithCustom",
        "title": "Open With An External App",
        "category": "Explorer"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Open File With Extension",
      "properties": {
        "open-file-with-extension.customApps": {
          "type": "object",
          "default": {
            ".html":"C:\\\\Program Files (x86)\\\\Microsoft\\\\Edge\\\\Application\\\\msedge.exe"
          },
          "description": "List of custom apps to open files with. Each entry should be an object with 'name' and 'path' properties."
        }
      }
    },
  "menus": {
    "explorer/context": [
      {
      "command": "open-file-with-extension.openWithCustom",
      "when": "resourceLangId != ''",
      "group": "navigation"
      }
    ]
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
